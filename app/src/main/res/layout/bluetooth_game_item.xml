<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/game_mark"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:contentDescription="Mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/device_barrier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_cross" />

    <TextView
        android:id="@+id/game_rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/game_mark"
        app:layout_constraintEnd_toStartOf="@id/game_cols"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        tools:text="rows: 15" />


    <TextView
        android:id="@+id/game_cols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/game_rows"
        app:layout_constraintEnd_toStartOf="@id/game_win"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:text="cols: 15" />

    <TextView
        android:id="@+id/game_win"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/device_mac_address"
        app:layout_constraintStart_toEndOf="@+id/game_cols"
        app:layout_constraintTop_toTopOf="@+id/device_name"
        app:layout_constraintEnd_toStartOf="@id/device_barrier"
        tools:text="win: 8" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/device_mac_address"
        app:layout_constraintStart_toEndOf="@id/device_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="bluetooth device" />

    <TextView
        android:id="@+id/device_mac_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/device_barrier"
        app:layout_constraintTop_toBottomOf="@+id/game_win"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="00:11:22:33:FF:EE" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/device_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="device_name, device_mac_address" />


<!--    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="device_mac_address" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
